%body
  #content
    #logo
      = link_to image_tag("logo.png", :border => "0"), "http://twends.heroku.com"
      %h1 Discover what's happening in the world in pics (with #{link_to "Twitter", "http://www.twitter.com", :id => "twitter"} trends and #{link_to "Flickr", "http://www.flickr.com", :id => "flickr"} photos)
    #banner
      #contentleft
        #options
          = link_to "Minute", { :action => "minute" }, :class => is_active?("minute")
          |
          = link_to "Day", { :action => "day" }, :class => is_active?("day")
          |
          = link_to "Week", { :action => "week" }, :class => is_active?("week")
        #main.image
          - @images.each do |text, imgs|
            - if imgs != nil
              - imgs.each do |img|
                %span{:class => "photo", :style => "background-image:url('#{img.url}')"}
                  %span#link.link
                    #{link_to text, url_escape("/tweets/#{text}")}
                  %span#share.share
                    = link_to image_tag("twitter.png"), "http://search.twitter.com/search?q=#{text}"
                    = link_to image_tag("flickr.png"), "http://www.flickr.com/search/?w=all&q=#{text}"
            - else
              %span{:class => "photo", :style => "background-image:url('')"}
                %span#link.link
                  #{link_to text, url_escape("/tweets/#{text}")}
                %span#share.share
                  = link_to image_tag("twitter.png"), "http://search.twitter.com/search?q=#{text}"
                  = link_to image_tag("flickr.png"), "http://www.flickr.com/search/?w=all&q=#{text}"
